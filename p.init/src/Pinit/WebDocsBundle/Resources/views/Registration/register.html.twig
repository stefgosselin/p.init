{% extends '::base.html.twig' %}

{% block content %}
<div class="well">
    {% include 'DemoBundle:Registration:_countrySwitcher.html.twig' %}
    <h1>{{ 'content.registration'|trans }}</h1>
    <p>{{ 'content.complete_form'|trans }}</p>
    {{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.name, null, {label_attr: {class: 'col-sm-2'}}) }}
            <div class="col-sm-4">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {attr: {class: 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email, null, {label_attr: {class: 'col-sm-2'}}) }}
            <div class="col-sm-4">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {attr: {class: 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.country, null, {label_attr: {class: 'col-sm-2'}}) }}
            <div class="col-sm-4">
                {{ form_errors(form.country) }}
                {{ form_widget(form.country, {attr: {class: 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.items, null, {label_attr: {class: 'col-sm-2'}}) }}
            <div class="col-sm-4">
                {{ form_errors(form.items) }}
                {{ form_widget(form.items, {attr: {class: 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                {{ form_widget(form.submit, {attr: {class: 'btn btn-primary'}}) }}
            </div>
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}
