{% extends "FOSUserBundle::layout.html.twig" %}
{% block title "Reset password" %}

{% block account %}{% endblock %}

{% block fos_user_content %}
<div class="well">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">
        <legend>{{ block('title') }}</legend>
        {% if invalid_username is defined %}
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}
            </div>
        {% endif %}
        <div class="form-group">
            <label class="col-sm-2" for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="username" name="username" placeholder="{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}" required="required" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <a class="btn" href="{{ path('homepage') }}">Cancel</a>
                <button type="submit" class="btn btn-primary">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
            </div>
        </div>
    </form>
</div>
{% endblock fos_user_content %}
